<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head")%>
    <link rel="stylesheet" href="/css/pokeCrear.css">
    <script src="/js/inputRadio.js"></script>
    <title>Create</title>
</head>
    <body>
        <div class="background-image">
            <img class="new-pokemon-photo" src="img/New-Pokemon.png">
            <div class="main-create-form">
                <form action="/createPokemon" method="POST" enctype="multipart/form-data">

                        <!-- name -->
                        <div class="main-create-form-flex">
                            <label>Name</label>
                            <div>
                                <input type="text" name="name" value="<%=locals.old && old.name %>">  
                                <% if (locals.errors && errors.name) { %>
                                    <p class="error-create"><%= errors.name.msg%></p>
                                <% } %> 
                            </div>
                        </div>                    

                        <!-- prefix -->
                        <div class="main-create-form-flex">
                            <label>Prefix</label>
                            <div>
                                <input type="text" name="prefix" value="<%=locals.old && old.prefix %>">
                                <% if (locals.errors && errors.prefix) { %>
                                    <p class="error-create"><%= errors.prefix.msg%></p>
                                <% } %> 
                            </div>
                        </div>

                        <!-- Main description -->
                        <div class="main-create-form-flex">
                            <label>Main description</label>
                            <div>
                            <textarea class="textarea-main" type="text" name="mainDescripcion"><%=locals.old && old.mainDescripcion%></textarea>
                            <% if (locals.errors && errors.mainDescripcion) { %>
                                <p class="error-create"><%= errors.mainDescripcion.msg%></p>
                            <% } %> 
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="main-create-form-flex">
                            <label>Description</label>
                            <div>
                                <textarea class="textarea" type="text" name="descripcion"><%=locals.old && old.descripcion%></textarea></textarea>
                                <% if (locals.errors && errors.descripcion) { %>
                                    <p class="error-create"><%= errors.descripcion.msg%></p>
                                <% } %> 
                            </div>
                        </div>

                        <!-- Generation -->
                        <div class="main-create-form-flex">
                            <label>Generation</label>
                            <div>
                                <input type="text" name="generation" value="<%=locals.old && old.generation%>">
                                <% if (locals.errors && errors.generation) { %>
                                    <p class="error-create"><%= errors.generation.msg%></p>
                                <% } %> 
                            </div>
                        </div>
                        
                        <!-- Specie -->
                        <div class="main-create-form-flex">
                            <label>Specie</label>
                            <div>
                                <input type="text" name="specie" value="<%=locals.old && old.specie%>">
                                <% if (locals.errors && errors.specie) { %>
                                    <p class="error-create"><%= errors.specie.msg%></p>
                                <% } %> 
                            </div>
                        </div>

                        <!-- Region -->
                        <div class="main-create-form-flex">
                            <label>Region</label>
                            <div>
                                <input type="text" name="region" value="<%=locals.old && old.region%>">
                                <% if (locals.errors && errors.region) { %>
                                    <p class="error-create"><%= errors.region.msg%></p>
                                <% } %> 
                            </div>
                        </div>

                        <!-- Index     -->
                        <div class="main-create-form-flex">
                            <label>Index</label>
                            <div>
                                <input type="text" name="index"  value="<%=locals.old && old.index%>">
                                <% if (locals.errors && errors.index) { %>
                                    <p class="error-create"><%= errors.index.msg%></p>
                                <% } %>
                            </div>
                        </div>


                    <!-- Type -->
                    <div class="main-create-typeA">
                        <label class="main-label">Type</label>
                        <div class="radio-option-flex">
                        <% for (let i=0 ; i<pokemonTypes.length ; i++) { %> 
                            <input id="choiseA" name="type" type="checkbox" value="<%=pokemonTypes[i].type%>">
                            <label class="label-option"><%=pokemonTypes[i].type%></label>
                        <% } %>
                        <% if (locals.errors && errors.type) { %>
                            <p class="error-create-check"><%= errors.type.msg%></p>
                        <% } %>
                        </div>
                    </div>

                    <!-- Strong against -->
                    <div class="main-create-typeB">
                        <label class="main-label">Strong against</label>
                        <div class="radio-option-flex">
                            <% for (let i=0 ; i<pokemonTypes.length ; i++) { %> 
                                <input id="choiseB" name="strongAgainst" type="checkbox" value="<%=pokemonTypes[i].type%>">
                                <label class="label-option"><%=pokemonTypes[i].type%></label>
                            <% } %>
                            <% if (locals.errors && errors.strongAgainst) { %>
                                <p class="error-create-check"><%= errors.strongAgainst.msg%></p>
                            <% } %>
                        </div>
                    </div>


                    <!-- Weak against -->
                    <div class="main-create-typeC">
                        <label class="main-label">Weak against</label>
                        <div class="radio-option-flex">
                            <% for (let i=0 ; i<pokemonTypes.length ; i++) { %> 
                                <input id="choiseC" name="weakAgainst" type="checkbox" value="<%=pokemonTypes[i].type%>">
                                <label class="label-option"><%=pokemonTypes[i].type%></label>
                            <% } %>
                            <% if (locals.errors && errors.weakAgainst) { %>
                                <p class="error-create-check"><%= errors.weakAgainst.msg%></p>
                            <% } %>
                        </div>
                    </div>

                    <!-- Photo -->
                    <div class="photo-create-poke">
                        <label class="photo-label">Photo</label>
                        <div>
                            <input type="file" name="img" class="input-file">
                            <% if (locals.errors && errors.img) { %>
                                <p class="error-create-check"><%= errors.img.msg%></p>
                            <% } %>
                        </div>
                    </div>

                    <div class="button-div">
                        <button onclick="pokeInput()" class="button" type="submit">Crear Pokemon</button>
                        <a href="/"><button type="button" class="button">Home</button></a>
                    </div>

                </form>

            </div>
        </div>

    </body>
</html>